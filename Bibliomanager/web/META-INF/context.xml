<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/newspaper">  
  
    <Resource
        name="jdbc/bibliomanager" 
        type="javax.sql.DataSource"
        auth="Container"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost/bibliomanager"
        username="bibliomanager"
        password="bibliomanager"
        maxActive="10"
        maxIdle="5"
        maxWait="10000"
    />
</Context>
